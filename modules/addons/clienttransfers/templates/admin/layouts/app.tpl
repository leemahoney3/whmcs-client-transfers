        </div>

        <div class="ct-content">
            <div class="ct-header">
                <div class="ct-module-name">
                    Client Transfers
                </div>
                <a href="https://leemahoney.tech" class="lmtech-logo">LMTech</a>
            </div>

            <div class="ct-container">

                {include file='admin/partials/alerts.tpl'}

                {block name="content"}{/block}
            </div>
        
            <script>
                $(document).ready(function () {
                    $('.ct-alert-close').on('click', function(e) {
                        e.preventDefault();
                        $(this).parent().parent().fadeOut(500);
